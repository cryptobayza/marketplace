{% extends 'base.html.twig' %}

{% block title %}Cyfer - Forgot Password{% endblock %}
{% block nav %}{% include '/nav.html.twig' %}{% endblock %}

{% block body %}
    <br />
    <div class="container-fluid">
        <div class="columns is-multiline">
            <div class="column is-full"></div>
            <div class="column is-4 is-offset-4">
                <div class="column is-10 is-offset-1">
                    <div class="content">
                        <h3>Reset</h3>
                        {{ form_start(recoverForm) }}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="field">
                                <div class="control has-icons-left">
                                    {{ form_widget(recoverForm.username) }}
                                    <span class="icon is-small is-left has-text-grey-dark">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control has-icons-left">
                                    {{ form_widget(recoverForm.password) }}
                                    <span class="icon is-small is-left has-text-grey-dark">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <div class="control has-icons-left">
                                    {{ form_widget(recoverForm.key) }}
                                    <span class="icon is-small is-left has-text-grey-dark">
                                        <i class="fa fa-key"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label" for="login_security">Security Challenge</label>
                                <div class="control">
                                    <img src="/img/captcha3/">
                                    <p style="font-size:12px;color:#396e9a;"><i class="fa fa-exclamation-triangle"></i> Please make absolutely sure the URL inside the security image matches the one in your browser! If they do not match, leave this site immediately.</p>
                                    <input type="text" autocomplete="off" id="login_security" name="_captcha" required="required" class="input is-medium" placeholder="enter text above" />
                                </div>
                            </div>
                            <div class="field">
                                <div class="control">
                                    {{ form_widget(recoverForm.reset) }}
                                    <a class="button background-none" href="/login/">Login</a>
                                </div>
                            </div>
                        {{ form_end(recoverForm) }}
                        {% for flashMessage in app.session.flashbag.get('recoverError') %}
                            <br/>
                            <div class="notification is-danger">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                        {% for flashMessage in app.session.flashbag.get('captchaError') %}
                            <br/>
                            <div class="notification is-danger">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}